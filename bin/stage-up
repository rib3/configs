#!/bin/bash

die() {
  [ -n "$1" ] && echo "${1}"
  exit 1
}

confirm() {
  echo -n "run: \`${@}\`? [y/n] "
  read answer
  if [ "${answer}" = "y" -o "${answer}" = "Y" ]; then
    eval ${@}
    return $?
  fi
  return 0
}

PR=$(git pull-request-id)
[ -z $PR ] && die "No PR found."

op stage-up "${PR}" || die "unable to stage up"

confirm soyuz deploy

exit 1
