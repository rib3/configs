[user]
  name = Bob Black
[color]
  ui = true
[alias]
  ai = add -i
  ap = add --patch
  b = branch
  blv = branch -lvv
  ca = commit -v --amend
  ci = commit
  cli = clean -di
  co = checkout
  cop = checkout --patch
  cv = commit -v
  d = diff
  dd = diff --word-diff-regex .
  do = diff --ours
  dom = diff origin/master
  ds = diff --stat
  dt = diff --theirs
  f = fetch
  fdom = !git fetch && git dom
  flpm = !git fetch && git lpm
  lp = log --patch
  lpm = !git lp origin/master...
  lo = log --oneline
  m = !git checkout master && git pull
  mm = !git fetch && git merge --no-ff origin/master
  mnf = merge --no-ff
  nb = new-branch
  pu = push
  puo = push -u origin
  r = reset
  rh = reset --hard
  ro = rebase origin
  rp = reset --patch
  s = status
  sl = stash list
  sp = stash pop
  ss = stash save
  ssp = stash save --patch
[push]
  default = current
[color "branch"]
  upstream = bold blue
