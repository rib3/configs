[user]
  name = Bob Black
[color]
  ui = true
[alias]
  ai = add -i
  ap = add --patch
  b = branch
  blv = branch -lvv
  ca = commit -v --amend
  ci = commit
  cli = clean -di
  co = checkout
  cop = checkout --patch
  cv = commit -v
  d = diff
  dd = diff --word-diff-regex .
  do = diff --ours
  dt = diff --theirs
  f = fetch
  lp = log --patch
  m = !git checkout master && git pull
  mm = !git fetch && git merge --no-ff origin/master
  mnf = merge --no-ff
  nb = new-branch
  p = push
  puo = push -u origin
  r = reset
  rh = reset --hard
  rp = reset --patch
  s = status
  sl = stash list
[push]
  default = current
[color "branch"]
  upstream = bold blue
