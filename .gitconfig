[user]
  name = Bob Black
  email = bob.black@sportngin.com
[color]
  ui = true
[alias]
  ai = add -i
  ap = add --patch
  b = branch
  blv = branch -lvv
  ca = commit -v --amend
  ci = commit
  co = checkout
  cop = checkout --patch
  cv = commit -v
  d = diff
  do = diff --ours
  dt = diff --theirs
  f = fetch
  lp = log --patch
  mm = !git fetch && git merge --no-ff origin/master
  # Includes hack to avoid (re)passing full args to end of command
  nb = !git fetch && sh -c 'git checkout --no-track -b $1 origin/master' -
  p = push
  r = reset
  rh = reset --hard
  rp = reset --patch
  s = status
  sl = stash list
[push]
  default = current
