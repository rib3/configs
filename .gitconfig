[user]
  name = Bob Black
  email = git@riblack.com
[core]
  safecrlf = false
[color]
  ui = true
[alias]
  ai = add -i
  ap = add --patch
  b = branch
  blv = branch -lvv
  ca = commit -v --amend
  ci = commit
  cli = clean -di
  co = checkout
  cop = checkout --patch
  cv = commit -v
  d = diff
  dc = diff --cached
  dd = diff --word-diff-regex .
  do = diff --ours
  dob = diff-origin-branch
  dom = diff origin/master
  dbm = diff origin/master... # ignores changes to master since branch
  ds = diff --stat
  dt = diff --theirs
  dw = diff --word-diff
  f = fetch
  fco = !git fetch && git co
  fdom = !git fetch && git dom
  flom = !git fetch && git lom
  flpm = !git fetch && git lpm
  flsm = !git fetch && git lsm
  ft = fetch --tags # when a tag is updated
  lo = log --oneline
  lom = !git lo origin/master...
  lp = log --patch
  lpm = !git lp origin/master...
  ls = log --stat
  lsm = !git ls origin/master...
  m = !git checkout master && git pull
  mm = !git fetch && git merge --no-ff origin/master
  mnf = merge --no-ff
  nb = new-branch
  pf = pull --ff-only
  pl = pull
  pu = push
  puo = push -u origin
  r = reset
  rh = reset --hard
  ro = rebase origin
  rp = reset --patch
  s = status
  sl = stash list
  sp = stash pop
  ss = stash show
  ssp = stash show --patch
  sv = stash save
  svp = stash save --patch
[push]
  default = current
[color "branch"]
  upstream = bold blue
[hub]
  protocol = ssh
